<%= form_for [:admin, @property] do |f| %>
  <fieldset>
    <legend>Edit property: <b><%= @property.code %></b></legend>
    <% Artlife::Application.config.locales.each do |locale| %>
      <%= f.globalize_fields_for locale do |g| %>
        <%= render "share/form_input", :f => g, :resource => @property, :input => [@property.edit_column, :value], :custom_label => "Value_#{locale}" %>
      <% end %>
    <% end -%>
    <div class="form-actions">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to "Cancel", admin_properties_path, :class => 'btn' %>
    </div>
  </fieldset>

<% end %>