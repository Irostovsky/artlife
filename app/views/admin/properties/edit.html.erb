<%= form_for [:admin, @property] do |f| %>
  <fieldset>
    <legend>Edit property: <b><%= @property.code %></b></legend>
    <%= render :layout => "share/translation", :locals => {:resource => @property, :form => f } do |translation_form| %>
      <%= render "share/form_input", :f => translation_form, :resource => @property, :input => [@property.edit_column, :value] %>
    <% end -%>
    <div class="form-actions">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to "Cancel", admin_properties_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>