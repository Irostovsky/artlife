
<%= form_for [:admin, @property] do |f| %>
  <fieldset>
    <legend>Edit property: <b><%= @property.code %></b></legend>
    <%= render "share/form_input", :f => f, :resource => @property, :input => [@property.edit_column, :value] %>
    <div class="form-actions">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to "Cancel", admin_properties_path, :class => 'btn' %>
    </div>
  </fieldset>

<% end %>