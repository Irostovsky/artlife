<%= form_for [:admin, @category] do |f| %>
  <fieldset>
    <legend><%= new_edit_legend(@category) %></legend>
    <%= render :layout => "share/translation", :locals => {:resource => @category, :form => f } do |translation_form| %>
      <%= render "share/form_input", :f => translation_form, :resource => @category, :input => [:text_field, :name]%>
    <% end -%>
    <div class="form-actions">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to "Cancel", admin_categories_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>