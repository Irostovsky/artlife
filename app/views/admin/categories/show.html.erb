<h3>Category: <%= @category.name %></h3>

<%= link_to "New Artist", new_admin_category_artist_path(@category) %>
<table class="table table-bordered artists">
  <thead>
    <tr>
      <th>Title</th>
      <th>Country</th>
      <th>Biography</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody >
    <% @artists.each do |artist| %>
      <tr artist-id="<%= artist.id %>">
        <td><%= artist.title %></td>
        <td><%= raw artist.country %></td>
        <td><%= raw artist.biography %></td>
        <td>
          <%= link_to raw("<i class='icon-pencil'></i>"), edit_admin_category_artist_path(@category, artist) %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
