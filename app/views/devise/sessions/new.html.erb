<%= form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>
  <fieldset>
    <legend>Sign in</legend>

    <%= render "share/form_input", :f => f, :resource => resource, :input => [:email_field, :email] %>
    <%= render "share/form_input", :f => f, :resource => resource, :input => [:password_field, :password] %>

    <div class="form-actions">
      <%= f.submit "Sign in", :class => 'btn btn-primary' %>
    </div>
  </fieldset>

<% end %>