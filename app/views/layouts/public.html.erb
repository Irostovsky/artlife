<%= render :layout => 'layouts/base' do %>
  <%= render 'share/admin_menu' if current_user %>
  <div class="header">
    <div class="layout">
      <div>
        <h1><%= link_to "Art Life", root_path %></h1>
        <p class="logo">Time art in our life</p>
      </div>
      <div>
        <%= property(:contacts) %>
      </div>
      <div class="locale-and-links">
        <%= locale_switcher(:cn) %>
        <%= locale_switcher(:en) %>
        <div>
          <span class="icq-name">
            <%= property(:icq_name) %>
          </span>
          <span class="skype-name">
            <%= property(:skype_name) %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <%= render 'share/flash_message', :content => notice, :clazz => 'alert alert-success' %>
  <%= render 'share/flash_message', :content => alert, :clazz => 'alert alert-error' %>

  <%= render 'share/top_menu' %>

  <div class="content layout">
    <%= yield %>
  </div>

  <%= render 'share/bottom_menu' %>
<% end -%>